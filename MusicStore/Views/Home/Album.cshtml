@model MusicStore.Models.Module.Album
@{
    ViewBag.Title = Model.Nazwa;
}

<h2>Album - @Html.Label(Model.Nazwa)</h2>

@if (Model.Image != null)
{
    <img src="data:image;base64,@Convert.ToBase64String(Model.Image)" width="100" height="100" />
}
else
{
    <img src="~/Content/default.jpg" height="150" width="150" />
}

<h4>Utwory</h4>
<table class="table table-striped">
    @foreach(var utwor in Model.Utwory)
    {
        <tr>
            <td>@Html.Label(utwor.Tytul)</td>
            <td>@Html.Label(utwor.Wykonawca)</td>
            <td><button class="btn btn-default" onclick="location.href='@Url.Action("Utwor", "Home", new { Id = utwor.Id})'">Więcej</button></td>
        </tr>
    }
</table>